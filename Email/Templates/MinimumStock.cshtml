@using System.Linq
@model ProjectLaborBackend.Email.Models.StockEmailModel
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Készletértesítés - RakLap</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #f4f6f8;
        }

        .container {
            max-width: 680px;
            margin: 28px auto;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 6px 18px rgba(22,28,37,0.06);
            overflow: hidden;
        }

        .header {
            padding: 20px;
            text-align: center;
            background: #111827;
            color: #fff;
        }

            .header h1 {
                margin: 0;
                font-size: 20px;
            }

        .content {
            padding: 26px;
            color: #0f1720;
        }

        h2 {
            color: #111827;
            margin-bottom: 8px;
        }

        h3 {
            margin-top: 20px;
            color: #0b6cf6;
            font-size: 17px;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
            margin-top: 8px;
        }

        li {
            margin: 6px 0;
        }

        .level-title {
            font-weight: 700;
            margin-top: 22px;
            font-size: 16px;
            color: #111827;
        }

        .critical {
            color: #dc2626;
            font-weight: 600;
        }

        .low {
            color: #d97706;
            font-weight: 600;
        }

        .footer {
            padding: 18px 26px;
            font-size: 13px;
            color: #6b7280;
            background: #fbfcfd;
        }

        .muted {
            color: #6b7280;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Készletértesítés</h1>
        </div>

        <div class="content">
            <h2>@Model.Name</h2>
            <p>Az alábbi termékek készlete alacsony:</p>

            @if (Model.WarningStocks.Any())
            {
                <div class="level-title critical">Kritikus szintű termékek</div>

                @foreach (var group in Model.WarningStocks.GroupBy(x => x.WarehouseName))
                {
                    <h3>@group.Key</h3>
                    <ul>
                        @foreach (var item in group)
                        {
                            <li>
                                <b style="margin-left: 20px">@item.ProductName</b> — @item.Stock / @item.Capacity db
                                <span class="critical">(Kritikus)</span>
                            </li>
                        }
                    </ul>
                }
            }

            @if (Model.NotificationStocks.Any())
            {
                <div class="level-title low">Alacsony szintű termékek</div>

                @foreach (var group in Model.NotificationStocks.GroupBy(x => x.WarehouseName))
                {
                    <h3>@group.Key</h3>
                    <ul>
                        @foreach (var item in group)
                        {
                            <li>
                                <b style="margin-left: 20px">@item.ProductName</b> — @item.Stock / @item.Capacity db
                            </li>
                        }
                    </ul>
                }
            }

            <hr style="border:none; border-top:1px solid #eef2f6; margin:22px 0;" />
            <p>
                Ha bármilyen kérdésed van, írj nekünk:
                <a href="mailto:mail.raklap@gmail.com">mail.raklap@gmail.com</a>
            </p>
            <p>Üdvözlettel,<br /><strong>a RakLap csapata</strong></p>
        </div>

        <div class="footer">
            <div>© 2025. Minden jog fenntartva.</div>
        </div>
    </div>
</body>
</html>
